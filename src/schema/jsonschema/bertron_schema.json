            ]
        },
        "uri": {
            "description": "Permanent resolvable URI for the entity at the data source.",
            "type": "string"
        }
    },
    "required": [
        "ber_data_source",
        "coordinates",
        "entity_type",
        "uri"
    ],
    "title": "bertron-schema",
    "type": "object",
    "version": "0.0.2"
}

